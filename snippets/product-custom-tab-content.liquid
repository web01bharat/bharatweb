{% comment %}
  Product Custom Tab - Basic Content
  Renders basic rich text content for a tab
{% endcomment %}

{%- liquid
  assign block_settings = block.settings
-%}

<div class="product-custom-tab-content">
  {% if block_settings.content != blank %}
    <div class="product-custom-tab-content__text rte">
      {{ block_settings.content }}
    </div>
  {% else %}
    <div class="product-custom-tab-content__placeholder">
      <p>Add content to this tab in the theme editor.</p>
    </div>
  {% endif %}
</div>

<style>
  .product-custom-tab-content {
    line-height: 1.6;
  }

  .product-custom-tab-content__text {
    color: var(--color-foreground);
  }

  .product-custom-tab-content__text h1,
  .product-custom-tab-content__text h2,
  .product-custom-tab-content__text h3,
  .product-custom-tab-content__text h4,
  .product-custom-tab-content__text h5,
  .product-custom-tab-content__text h6 {
    margin-bottom: var(--spacing-sm);
    margin-top: var(--spacing-md);
  }

  .product-custom-tab-content__text h1:first-child,
  .product-custom-tab-content__text h2:first-child,
  .product-custom-tab-content__text h3:first-child,
  .product-custom-tab-content__text h4:first-child,
  .product-custom-tab-content__text h5:first-child,
  .product-custom-tab-content__text h6:first-child {
    margin-top: 0;
  }

  .product-custom-tab-content__text p {
    margin-bottom: var(--spacing-sm);
  }

  .product-custom-tab-content__text ul,
  .product-custom-tab-content__text ol {
    margin-bottom: var(--spacing-sm);
    padding-left: var(--spacing-lg);
  }

  .product-custom-tab-content__text li {
    margin-bottom: var(--spacing-xs);
  }

  .product-custom-tab-content__text blockquote {
    border-left: 3px solid var(--color-accent);
    padding-left: var(--spacing-md);
    margin: var(--spacing-md) 0;
    font-style: italic;
    color: var(--color-foreground-secondary);
  }

  .product-custom-tab-content__placeholder {
    color: var(--color-foreground-secondary);
    font-style: italic;
    text-align: center;
    padding: var(--spacing-lg);
    border: 1px dashed var(--color-border);
    border-radius: var(--border-radius);
  }
</style>
